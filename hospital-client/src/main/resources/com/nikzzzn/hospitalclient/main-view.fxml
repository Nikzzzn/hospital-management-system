<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" prefHeight="410.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nikzzzn.hospitalclient.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="List of appointments">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TableView fx:id="appointmentsTable" prefHeight="313.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="columnId" prefWidth="30.0" text="ID" />
          <TableColumn fx:id="columnDoctor" prefWidth="190.0" text="Doctor name" />
            <TableColumn fx:id="columnPatient" prefWidth="190.0" text="Patient name" />
            <TableColumn fx:id="columnDate" prefWidth="120.0" text="Date" />
            <TableColumn fx:id="columnTime" prefWidth="67.0" text="Time" />
        </columns>
      </TableView>
      <Button mnemonicParsing="false" onAction="#btnNewAppointmentClick" text="Add new appointment" />
   </children>
</VBox>
